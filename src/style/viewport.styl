@import './lib';

#viewportBar
  align-items center
  background-color $bg
  color $white
  display flex
  flex-grow 2
  height 32px
  font-size 15px
  justify-content space-between
  padding 0 5px

.toolbarButtons
  display flex
  align-items center
  gap 6px

  a.button
    & svg
      padding 8px

    &:not(.active) svg:hover
      background-color $grayhover

  .active svg
    background-color $primary
    color #fff

  .active:hover svg
    color #fff !important

.local-transform
  display flex
  align-items center
  gap 5px
  padding 0 10px

.local-transform label
  color $lightgray

#cameraSelect
  cursor pointer
  width 120px
  .select__dropdown-indicator
    padding-left 3px
    padding-right 3px

#cameraToolbar
  align-items center
  display flex
  .select__control
    background none
  .select__single-value
    color $white
    &:hover
      color $primary

#viewportHud
  display none
  +media--1024()
    display block
